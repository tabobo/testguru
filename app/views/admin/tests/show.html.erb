<nav aria-label="breadcrumb bg-white">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to t('admin.actions.back'), admin_tests_path %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to t('admin.actions.edit'), edit_admin_test_path(@test) %>
    </li>
  </ol>
</nav>

<h2> <%= @test.title %> </h2>
<p><%= t('.level') %> <%= @test.level %> </p>
<p><%= t('.category') %> <%= @test.category_id %> </p>
<p><%= t('.author') %> <%= @test.author_id %> </p>
<p><%= t('.number_questions') %> <%= @test.questions.count %></p>

<%= link_to t('admin.actions.create'), new_admin_test_question_path(@test), :class => "btn btn-outline-primary mb-3" %>

<table class="table table-striped">
    <tr>
      <th><%= t('.th1') %></th>
      <th colspan="3"><%= t('.th2') %></th>
    </tr>

    <%= render @test.questions %>
</table>

