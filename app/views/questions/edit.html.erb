<%= form_for @question, url: test_question_path(@test, @question) do |f| %>
  <label>Текст вопроса:</label><br>
  <%= f.text_field :body %><br>
  <label>Номер теста:</label><br>
  <%= f.text_field :test_id %><br>

  <%= f.submit "Update question" %>
<% end %>

<%= link_to 'Show', [@test, @question] %> |
<%= link_to 'Back', test_questions_path(@test) %>