<h1 class="title">Contact Me</h1>
<div class="container">
  <div class="row">
    <%= form_with model: @message, local: true do |form| %>
      <div class="form-group">
        <%= render 'shared/errors', resource: @message %> 

        <div>
          <%= form.label :name %>
          <%= form.text_field :name, id: :name, class: 'form-control' %>
        </div>
        
        <div>
          <%= form.label :email %>
          <%= form.text_field :email, id: :feedback_email, class: 'form-control' %>
        </div>

        <div>
          <%= form.label :message %>
          <%= form.text_area :message, id: :feedback_message, rows: 5, class: 'form-control' %>
        </div>
        <br>

        <%= form.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>